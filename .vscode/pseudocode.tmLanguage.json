{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Pseudocode (Sobol)",
  "scopeName": "source.pseudocode",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.pseudocode",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.algorithm.pseudocode",
          "match": "\\b(algorithm)\\b"
        },
        {
          "name": "keyword.control.conditional.pseudocode",
          "match": "\\b(if|then|else)\\b"
        },
        {
          "name": "keyword.control.loop.pseudocode",
          "match": "\\b(for|to|step|while|do)\\b"
        },
        {
          "name": "keyword.control.flow.pseudocode",
          "match": "\\b(return|break)\\b"
        },
        {
          "name": "keyword.operator.logical.pseudocode",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "keyword.operator.arithmetic.pseudocode",
          "match": "\\b(div|mod)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.pseudocode",
          "match": "←"
        },
        {
          "name": "keyword.operator.comparison.pseudocode",
          "match": "(≤|≥|≠|<|>|=)"
        },
        {
          "name": "keyword.operator.arithmetic.pseudocode",
          "match": "(\\+|−|·|/|\\^|√)"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.pseudocode",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.pseudocode",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.pseudocode",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.io.pseudocode",
          "match": "\\b(read|write)\\b"
        },
        {
          "name": "entity.name.function.pseudocode",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.pseudocode",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.array.pseudocode",
          "match": "[A-Z]\\[[^\\]]+\\]"
        }
      ]
    }
  }
}
